{
    "enableFileTypes": [
        "dockercompose",
        "dockerfile",
        "dotenv",
        "makefile",
        "markdown",
        "shellscript",
        "yaml"
    ],
    "dictionaries": [
        "en-GB",
        "blog"
    ],
    "dictionaryDefinitions": [
        {
           "name": "blog",
           "path": "../.config/cspell_blog.txt",
           "addWords": true
        }
    ],
    "ignorePaths": [
        ".git/**",
        "blog/2023/12/22/docker-joomla-fr/index.md",
        "build/**",
        "docusaurus.config.js",
        "node_modules/**",
        "src/components/**",
        "src/css/**",
        "src/theme/**",
        "static/**",
        "vendor/**"
    ]
}