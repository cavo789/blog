#!/usr/bin/env zsh

# Print executed commands with optional color formatting
local cmd_str="$1"
local color="${2:-\033[1;32m}" # Default to green
local reset_color="\033[0m"

# Truncate output if it exceeds 200 characters for readability
if [[ ${#cmd_str} -gt 200 ]]; then
    cmd_str="${cmd_str:0:197}..."
fi

echo -e "Command: ${color}${cmd_str}${reset_color}"
