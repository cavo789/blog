{
  "name": "MyBlog",
  "service": "docusaurus",
  "dockerComposeFile": ["../.devcontainer/compose.yaml"],
  "workspaceFolder": "/opt/docusaurus",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": "host"
    }
  },
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    "source=yarn-cache,target=/usr/local/share/.cache/yarn/v6"
  ],
  "portsAttributes": {
    "3000": {
      "onAutoForward": "openBrowser",
      "label": "Docusaurus Blog"
    }
  },
  "forwardPorts": [3000],
  "initializeCommand": "mkdir -p .devcontainer/history && touch .devcontainer/history/.bash_history && echo '.bash_history' > .devcontainer/history/.gitignore",
  "postCreateCommand": "/opt/docusaurus/.devcontainer/bootstrap.sh",
  "remoteUser": "vscode",
  "containerUser": "vscode",
  "customizations": {
    "vscode": {
      "settings": {
        "[markdown]": {
          "editor.codeActionsOnSave": {
            "source.fixAll": "always"
          },
          "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
          "editor.formatOnSave": true,
          "editor.wordWrap": "wordWrapColumn",
          "editor.wordWrapColumn": 80,
          "editor.wrappingIndent": "indent"
        },
        "cspell.language": "en",
        "editor.bracketPairColorization.enabled": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.markdownlint": "always"
        },
        "editor.folding": true,
        "editor.foldingStrategy": "auto",
        "editor.formatOnSave": true,
        "editor.guides.bracketPairs": "active",
        "editor.guides.bracketPairsHorizontal": "active",
        "editor.guides.highlightActiveBracketPair": true,
        "editor.guides.indentation": true,
        "editor.renderWhitespace": "all",
        "editor.rulers": [120, 70],
        "editor.stickyScroll.enabled": true,
        "editor.tabCompletion": "on",
        "files.associations": {
          ".mdx": "Markdown"
        },
        "files.autoSave": "onFocusChange",
        "files.eol": "\n",
        "files.defaultLanguage": "markdown",
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": true,
        "markdownlint.configFile": ".config/.markdownlint.json",
        "markdownlint.fixOnSave": true,
        "sonarlint.disableTelemetry": true,
        "telemetry.telemetryLevel": "off",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "icon": "terminal-bash"
          }
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "window.title": "${dirty}${rootName} ${separator} [DevContainer]",
        "workbench.colorTheme": "Visual Studio Light",
        "workbench.startupEditor": "terminal"
      },
      "extensions": [
        "Codeium.codeium",
        "DavidAnson.vscode-markdownlint",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "GitHub.vscode-github-actions",
        "shd101wyy.markdown-preview-enhanced",
        "streetsidesoftware.code-spell-checker-british-english",
        "streetsidesoftware.code-spell-checker-french",
        "streetsidesoftware.code-spell-checker",
        "TomasDahlqvist.markdown-admonitions",
        "ms-vscode.makefile-tools",
        "usernamehw.errorlens",
        "usernamehw.errorlens",
        "yzhang.markdown-all-in-one"
      ]
    }
  }
}
