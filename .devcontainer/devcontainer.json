{
  "name": "MyBlog",
  "service": "docusaurus",
  "dockerComposeFile": ["../.devcontainer/compose.yaml"],
  "workspaceFolder": "/opt/docusaurus",
  "mounts": [
    "source=../.devcontainer/history/.bash_history,target=/home/node/.bash_history,type=bind",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    "source=node_modules,target=/opt/docusaurus/node_modules,type=volume",
    "source=vscode-extensions,target=/home/node/.vscode-server/extensions,type=volume",
    "source=yarn-cache,target=/home/node/.cache/yarn/v6,type=volume"
  ],
  "portsAttributes": {
    "3000": {
      "label": "Docusaurus Blog",
      "requireLocalPort": true,
      "localPortService": "http-get:http://localhost:3000/",
      "localPortReady": "wait:30000",
      "onAutoForwardAction": {
        "type": "openBrowser",
        "url": "https://localhost:3000"
      }
    },
    "8010": {
      "label": "LanguageTool"
    }
  },
  "forwardPorts": [3000, 8010],
  "containerEnv": {
    "GIT_SSH_COMMAND": "ssh -i /home/node/.ssh/id_ed25519 -o 'UserKnownHostsFile=/dev/null'",
    "YARN_CACHE_FOLDER": "/home/node/.cache/yarn/v6"
  },
  "initializeCommand": "mkdir -p .docusaurus .devcontainer/history && touch .devcontainer/history/.bash_history && echo '.bash_history' > .devcontainer/history/.gitignore",
  "remoteUser": "node",
  "updateRemoteUserUID": false,
  "overrideCommand": false,
  "customizations": {
    "vscode": {
      "settings": {
        "[markdown]": {
          "editor.codeActionsOnSave": {
            "source.fixAll": "always"
          },
          "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
          "editor.formatOnSave": true,
          "editor.wordWrap": "wordWrapColumn",
          "editor.wordWrapColumn": 80,
          "editor.wrappingIndent": "indent"
        },
        "cspell.language": "en",
        "editor.bracketPairColorization.enabled": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.markdownlint": "always"
        },
        "editor.folding": true,
        "editor.foldingStrategy": "auto",
        "editor.formatOnSave": true,
        "editor.guides.bracketPairs": "active",
        "editor.guides.bracketPairsHorizontal": "active",
        "editor.guides.highlightActiveBracketPair": true,
        "editor.guides.indentation": true,
        "editor.renderWhitespace": "all",
        "editor.rulers": [120, 70],
        "editor.stickyScroll.enabled": true,
        "editor.tabCompletion": "on",
        "files.associations": {
          ".mdx": "Markdown"
        },
        "files.autoSave": "onFocusChange",
        "files.eol": "\n",
        "files.defaultLanguage": "markdown",
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": true,
        "languageToolLinter.languageTool.motherTongue": "en",
        "languageToolLinter.languageTool.language": "en",
        "languageToolLinter.external.url": "http://languagetool:8010",
        "markdownlint.configFile": ".config/.markdownlint.json",
        "markdownlint.fixOnSave": true,
        "sonarlint.disableTelemetry": true,
        "telemetry.telemetryLevel": "off",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "icon": "terminal-bash"
          }
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "window.title": "${dirty}${rootName} ${separator} [DevContainer]",
        "workbench.colorTheme": "Visual Studio Light",
        "workbench.startupEditor": "terminal"
      },
      "extensions": [
        "DavidAnson.vscode-markdownlint",
        "davidlday.languagetool-linter",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "GitHub.copilot",
        "GitHub.vscode-github-actions",
        "Google.geminicodeassist",
        "ms-vscode.makefile-tools",
        "shd101wyy.markdown-preview-enhanced",
        "streetsidesoftware.code-spell-checker",
        "TomasDahlqvist.markdown-admonitions",
        "usernamehw.errorlens",
        "yzhang.markdown-all-in-one"
      ]
    }
  }
}
